<%-include("header")-%>
<div class="container" style="margin-top: 10%">
  <div
    class="card p-5"
    style="
      background: linear-gradient(
        rgba(13, 178, 243, 0.5),
        rgba(228, 102, 180, 0.5)
      );
      border-radius: 0px;
    "
  >
    <div class="card-body shadow-lg">
      <% if(loginResponse=='invalid credentials'){%>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong><%= loginResponse%></strong>
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%}%>
      <center><h3 class="text-white">LOGIN</h3></center>
      <form class="form-group" action="/auth/signin" method="post">
        <input
          required
          class="form-control mt-3"
          style="border-radius: 0px"
          placeholder="Email"
          type="email"
          name="email"
        />
        <input
          required
          class="form-control mt-3"
          style="border-radius: 0px"
          placeholder="password"
          type="password"
          name="password"
        />
        <button class="btn text-white btn-primary roundbth mt-3" type="submit">
          Log In
        </button>
      </form>
    </div>
  </div>
</div>
<%- include("footer")-%>
