<div class="container mb-5">
  <% if(delResponse=='post deleted successfully') {%>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong><%= delResponse%></strong>
      <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <%} else if(delResponse=='post delete failed') {%>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong><%= delResponse%></strong>
      <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

  <%}%> <% matches.forEach((post) => {%>

  <div
          class="card p-2 m-3"
          style="
          background: linear-gradient(
            rgba(13, 178, 243, 0.5),
            rgba(228, 102, 180, 0.5)
          );
          border-radius: 0px;
        "
  >
    <div class="card-body shadow-lg">
      <div class="row">
        <div class="col-md-8 col-sm-8">
          <h4>
            <%
              const convert = {
                "100": "CSE",
                "101": "IT",
                "102": "ECE",
                "103": "AEIE",
                "104": "EE",
                "105": "MECH",
                "106": "CIVIL",
                "107": "CHEMICAL",
                "108": "BT/FT",
                "109": "CSE CS",
                "110": "CSE DS",
                "111": "CSE AIML",
                "112": "MASTERS",
              }
              const team1 = convert[post.team1Code]
              const team2 = convert[post.team2Code]
              // format date to MONDAY, \nSeptember 23, 2023 10:00 AM
              const weekday = new Date(post.match_date).toLocaleString("en-US", {
                weekday: "long",
              });
              const date = new Date(post.match_date).toLocaleString("en-US", {
                month: "long",
                day: "numeric",
                year: "numeric",
              });
              const time = new Date(post.match_date).toLocaleString("en-US", {
                hour: "numeric",
                minute: "numeric",
                hour12: true,
              });
            %>
            <%= team1%> vs <%=team2%>
          </h4>
          <p style="font-size: 13px"><%=weekday%><br>
          <%=date%>, <%=time%>
          </p>
          <a
                  class="btn btn-success btn-sm"
                  href="/pages/live/edit/<%=post.firebase_match_id%>"
                  role="button"
          >Edit</a>
          <a
                  class="btn btn-danger btn-sm"
                  href="/api/live/del/<%=post.firebase_match_id%>"
                  role="button"
          >Delete</a>
        </div>
      </div>
    </div>
  </div>
  <%})%>
</div>

<%-include("../footer")-%>
</body>
</html>
